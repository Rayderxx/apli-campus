<div ng-controller="AgendaAdminCtrl" class="events admin">
    <form ng-show="displayForm" class="form-horizontal" role="form" style="width:300px;" name="eventForm">
        <div class="form-group">
            <div class="col-sm-10">
                <input ng-model="event.description" required type="text" class="form-control" id="inputEmail3" placeholder="Titre">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <label>Date de début</label>
                <input ng-model="event.dateStart" required type="date" class="form-control" id="inputPassword3" placeholder="Date de début">
                <br/>
                <input ng-model="event.timeStart" required type="time" class="form-control" id="inputPassword3">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <label>Date de fin</label>
                <input  ng-model="event.dateEnd"required type="date" class="form-control" id="inputPassword3" placeholder="Date de fin">
                <br/>
                <input ng-model="event.timeEnd" required type="time" class="form-control" id="inputPassword3">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <button ng-click="addEvent(event, eventForm)" type="submit" class="btn btn-default">Ajouter l'événement</button>
            </div>
        </div>
    </form>
    <form ng-hide="displayForm" class="form-horizontal" role="form" name="editEventForm" style="width:300px;">
        <div class="form-group">
            <div class="col-sm-10">
                <input ng-model="event.description" required type="text" class="form-control" id="inputEmail3" placeholder="Titre">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <label>Date de début</label>
                <input ng-model="event.dateStart" required type="date" class="form-control" id="inputPassword3" placeholder="Date de début">
                <br/>
                <input ng-model="event.timeStart" required type="time" class="form-control" id="inputPassword3">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <label>Date de fin</label>
                <input  ng-model="event.dateEnd"required type="date" class="form-control" id="inputPassword3" placeholder="Date de fin">
                <br/>
                <input ng-model="event.timeEnd" required type="time" class="form-control" id="inputPassword3">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <button ng-click="updateEvent(event, editEventForm)" type="submit" class="btn btn-default">Supprimer l'évévement</button>
            </div><br/><br/>
            <div class="col-sm-10">
                <button ng-click="updateEvent(event, editEventForm)" type="submit" class="btn btn-default">Modifier l'événement</button>
            </div><br/><br/>
            <div class="col-sm-10">
                <button ng-click="removeEvent(event)" type="submit" class="btn btn-default">Supprimer l'événement</button>
            </div><br/><br/>
            <div class="col-sm-10">
                <button ng-click="switchEvent()" type="submit" class="btn btn-default">Retour</button>
            </div>
        </div>
    </form>
    <div class="agenda-event" ui-calendar="uiConfig.calendar" ng-model="eventSources"></div>
</div>